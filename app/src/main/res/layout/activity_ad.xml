<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AdActivity">

    <TextView
        android:id="@+id/opened_ad_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="24dp"
        android:padding="10dp"
        android:textAlignment="center"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorWhite"
        android:text="Iphone 6S Apple"/>

    <ImageView
        android:id="@+id/opened_ad_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        app:layout_constraintTop_toBottomOf="@id/opened_ad_title"
        android:src="@mipmap/ic_launcher"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/opened_ad_image"
        app:layout_constraintBottom_toTopOf="@id/bottomPanel"
        android:orientation="vertical"
        android:paddingHorizontal="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="15dp">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_description"/>

        <TextView
            android:id="@+id/opened_ad_longDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:minHeight="70dp"
            android:padding="5dp"
            android:layout_marginLeft="40dp"
            android:textSize="16dp"
            android:textColor="@color/colorMyDark"
            android:inputType="textMultiLine" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="15dp">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/ic_smartphone"/>

            <TextView
                android:id="@+id/opened_ad_phoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:layout_marginLeft="40dp"
                android:text=""
                android:layout_centerVertical="true"
                android:textColor="@color/colorMyDark" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="15dp">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_email"/>

        <TextView
            android:id="@+id/opened_ad_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:layout_marginLeft="40dp"
            android:layout_centerVertical="true"
            android:text=""
            android:textColor="@color/colorMyDark" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/ic_location"/>

            <TextView
                android:id="@+id/opened_ad_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:textSize="16dp"
                android:layout_centerVertical="true"
                android:text=""
                android:textColor="@color/colorMyDark" />
        </RelativeLayout>


    </LinearLayout>


    <RelativeLayout
        android:id="@+id/bottomPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="10dp">

        <ImageButton
            android:id="@+id/opened_ad_report"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:background="@android:color/transparent"
            android:tint="@color/colorMyRed"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_report" />

        <ImageButton
            android:id="@+id/opened_ad_share"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:tint="@color/colorPrimary"
            android:scaleType="fitCenter"
            android:layout_marginLeft="50dp"
            app:srcCompat="@drawable/ic_share" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/opened_ad_avatar"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/img_avatar"
            android:elevation="0dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>